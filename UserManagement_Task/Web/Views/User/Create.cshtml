@model Core.DTOs.UserDTO

@{
    ViewBag.Title = "Create User";
}

<div class="container mt-4">
    <div class="card shadow-sm p-4">
        <h2 class="text-center mb-4">Create User</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <!-- Username Field -->
                <div class="mb-3">
                    @Html.LabelFor(model => model.Username, new { @class = "form-label fw-bold" })
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        <input type="text" id="Username" name="Username" class="form-control" oninput="validateField('Username', 50)">
                    </div>
                    <span id="UsernameError" class="text-danger"></span>
                </div>

                <!-- Name Field -->
                <div class="mb-3">
                    @Html.LabelFor(model => model.Name, new { @class = "form-label fw-bold" })
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-card-text"></i></span>
                        <input type="text" id="Name" name="Name" class="form-control" oninput="validateField('Name', 255)">
                    </div>
                    <span id="NameError" class="text-danger"></span>
                </div>

                <!-- Email Field -->
                <div class="mb-3">
                    @Html.LabelFor(model => model.Email, new { @class = "form-label fw-bold" })
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input type="email" id="Email" name="Email" class="form-control" oninput="validateEmail()">
                    </div>
                    <span id="EmailError" class="text-danger"></span>
                </div>

                <!-- Mobile Number Field -->
                <div class="mb-3">
                    @Html.LabelFor(model => model.MobileNumber, new { @class = "form-label fw-bold" })
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-phone"></i></span>
                        <input type="text" id="MobileNumber" name="MobileNumber" class="form-control" oninput="validateField('MobileNumber', 20)">
                    </div>
                    <span id="MobileNumberError" class="text-danger"></span>
                </div>

                <!-- Profile Picture Field -->
                <div class="mb-3">
                    @Html.LabelFor(model => model.ProfilePicture, new { @class = "form-label fw-bold" })
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-image"></i></span>
                        <input type="text" id="ProfilePicture" name="ProfilePicture" class="form-control">
                    </div>
                    <span id="ProfilePictureError" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary px-4" onclick="return validateForm();">
                        <i class="bi bi-check-circle"></i> Create User
                    </button>
                    <a href="@Url.Action("Index", "User")" class="btn btn-secondary px-4 ms-2">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<script src="~/Scripts/Validation.js"></script>

<!-- Include Bootstrap Icons for Better UI -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
