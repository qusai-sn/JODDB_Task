@{
    ViewBag.Title = "Import Users";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center">Import Users from Excel</h2>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div>
        }

        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success text-center">@ViewBag.SuccessMessage</div>
        }

        <!-- ✅ Display Import Time -->
        @if (ViewBag.ImportTime != null)
        {
            <div class="alert alert-info text-center">
                Import completed in <strong>@ViewBag.ImportTime</strong> seconds.
            </div>
        }

        <form method="post" enctype="multipart/form-data" action="@Url.Action("ImportUsers", "ImportUsers")">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label">Select Excel File</label>
                <input type="file" name="file" class="form-control" accept=".xlsx" required>
            </div>

            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-upload"></i> Upload & Import
            </button>
        </form>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
